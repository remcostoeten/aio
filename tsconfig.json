{
	"compilerOptions": {
		"target": "ES2017",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@/shared/*": [
				"./src/shared/*"
			],
			"db": [
				"./src/server/db/index.ts"
			],
			"@/core/*": [
				"./src/core/*"
			],
			"@/features/*": [
				"./src/features/*"
			],
			"@mutation": [
				"./src/server/actions/mutations/index.ts"
			],
			"query": [
				"./src/server/actions/queries/index.ts"
			],
			"@/server/*": [
				"./src/server/*"
			],
			"ui": [
				"./src/shared/ui/index.ts"
			],
			"helpers": [
				"./src/shared/helpers/index.ts"
			],
			"schema": [
				"./src/server/db/schema/index.ts"
			]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
