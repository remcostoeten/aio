{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		/* Paths */
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"db": ["./src/shared/services/supabase/client.ts"],
			"types": ["./src/shared/services/supabase/types.ts"],
			"ui": ["./src/shared/ui/index.ts"],
			"mutation": ["./src/server/actions/mutations/index.ts"],
			"query": ["./src/server/actions/queries/index.ts"]
		}
	},
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
